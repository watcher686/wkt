.zjInput {
  font-size: 1.2rem;
  padding: 20rpx 25rpx;
  margin: 20rpx 20rpx;
  border: 1px solid #6f6f6f;
}

.courseware {
  margin: 20rpx;
}

.courseChapter {
  padding: 20rpx 10rpx;
}

.courseChapter text {
  font-size: 1.5rem;
